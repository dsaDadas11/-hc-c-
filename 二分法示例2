#include <iostream>
#include <algorithm>
#define endl '\n'
#define ll long long
#define int ll
using namespace std;
const int N = 1e6 + 7;
int a[N];
int n,m;
bool cmp(int x, int y)
{
	return x > y;
}
bool solve(int x)
{
	int sum=0;
	for(int i=1;i<=n;i++)
	{
		if(a[i]>x) sum+=a[i]-x;
	}
	if(sum>=m) return 1;
	else return 0;
}
signed main()
{
	ios::sync_with_stdio(0);
	cin.tie(0);
	cout.tie(0);
	cin >> n >> m;
	for (int i = 1; i <= n; i++)
	{
		cin >> a[i];
	}
	sort(a + 1, a + 1 + n,cmp);
	int l=a[n];
	int r=a[1];
	while(l<r)
	{
		int mid=(l+r+1)/2;
		if(solve(mid)) l=mid;
		else r=mid-1;
	}
	cout<<r<<endl;
	return 0;
}
